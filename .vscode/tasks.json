{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "dev",
            "type": "shell",
            "command": "kpenv && make dev",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "kpenv && make clean",
            "group": "build"
        },
        {
            "label": "build",
            "type": "shell",
            "command": "kpenv && make build",
            "group": "build"
        },
        {
            "label": "install",
            "type": "shell",
            "command": "kpenv && make install",
            "group": "build"
        }
    ]
}
